{
  "compilerOptions": {
    "types": [
      "vitest/importMeta"
    ],
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "fake-external-lib": [
        "./src/fake-external-lib/index"
      ],
      "fake-animation-lib": [
        "./src/fake-animation-lib/index"
      ],
      "fake-animation-lib-solution": [
        "./src/fake-animation-lib/index"
      ]
    }
  },
  "include": [
    "src"
  ]
}